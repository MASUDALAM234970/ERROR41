
/*
  Purpose : To implement a Fibonnaci series using an Recursive function
  Date    : 7 June 2023
  Author  : Error41
 */



#include<stdio.h>
#include<stdlib.h>

int fib(int n);

int main() {
    int n;
    printf("\n\n Please ! give any integer number : ");
    scanf("%d", &n);


           for(int i=0; i<=n; i++)

           {
                printf("%d " ,fib(i));
           }

          printf("\n\n");



    printf("\n\nHello, my friend!\n");

}

int fib(int n)

 {
     //base_Case
     if (n == 0)
        return 0;

        if(n == 1)
           return 1;

        //Recurvesive case
    return fib(n-1) + fib(n - 2);
}
